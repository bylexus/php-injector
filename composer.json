    "homepage": "https://github.com/bylexus/php-injector",
    "version": "4.1.0",
    "authors": [
        {
            "name": "Alexander Schenkel",
            "email": "alex@alexi.ch",
            "homepage": "https://www.alexi.ch/",
            "role": "Developer"
        }
